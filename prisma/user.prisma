model User {
    id           Int        @id @default(autoincrement())
    email        String     @unique
    name         String?
    lastname     String?
    gender       Gender?
    phone        String?
    password     String
    role         Role       @default(USER)
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
    dogs         Dog[]
    howManyDogs  Int?
    company      Company?   @relation("CompanyEmployees", fields: [companyId], references: [id])
    companyId    Int?
    ownedCompany Company?   @relation("CompanyOwner")
    clientOfId   Int?
    clientOf     Company?   @relation("CompanyClients", fields: [clientOfId], references: [id])
    status       UserStatus @default(INCOMPLETE)
}

enum Gender {
    Male
    Female
    Other
}

enum Role {
    ADMIN
    USER
    CLIENT
    OWNER
}

enum UserStatus {
    INCOMPLETE
    ACTIVE
    INACTIVE
    BLOCKED
    DELETED
}
